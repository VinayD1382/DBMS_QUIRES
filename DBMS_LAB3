2)// fIND ACTOR ACTED IN MORE THAN ONE MOVIE AND FIND THE MOV_TITLE HAVING MORE THAN ONE ACTORS
 SELECT M.MOV_TITLE FROM MOVIES M ,MOVIE_CAST MC
    -> WHERE M.MOV_ID = MC.MOV_ID AND ACT_ID = (SELECT ACT_ID FROM MOVIE_CAST GROUP BY ACT_ID HAVING COUNT(*) >1)//FIRST LEARN THIS . 
    -> GROUP BY MOV_TITLE
    -> HAVING COUNT(*)>1;

3)SELECT A.ACT_NAME FROM ACTOR A JOIN MOVIE_CAST MC ON A.ACT_ID = MC.ACT_ID JOIN MOVIES M ON M.MOV_ID = MC.MOV_ID
    -> WHERE MOV_YEAR NOT BETWEEN 2000 AND 2015;
//SIMILAR WE WHERE M.MOV_ID = K.MOV_ID // HERE WE USE JOIN INSTED

4)SELECT MOV_TITLE,MAX(REV_STARS) FROM MOVIES M INNER JOIN RATING R USING (MOV_ID)
    -> GROUP BY MOV_TITLE
    -> HAVING MAX(REV_STARS)>0  // WE ARE DECLIRING THAT MAX(REV) SHOULD BE > 0 IF MAX(REV) = 4 BUT WE ARE COMPARING FROM 0
    -> ORDER BY MOV_TITLE;

5) UPDATE RATING
    -> SET REV_STARS = 5
    -> WHERE MOV_ID IN (SELECT MOV_ID FROM MOVIES WHERE DIR_ID IN
    -> (SELECT DIR_ID FROM DIRECTOR
    -> WHERE DIR_NAME = 'STEVEN SPIELBERG'));
